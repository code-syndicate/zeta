    <script>
      $(document).ready(() => {
        $("#close-sign-in-form").click(() => {
          $("#sign-in-form").slideUp();
          $("#overlay").fadeOut("slow");
        });

        $(".open-sign-in-form").click(() => {
          $("#overlay").fadeIn("fast");
          $("#sign-in-form").slideDown();
        });

        $("#close-sign-up-form").click(() => {
          $("#sign-up-form").slideUp("fast");
          $("#overlay").fadeOut("slow");
        });

        $(".open-sign-up-form").click(() => {
          $("#overlay").fadeIn("fast");
          $("#sign-up-form").slideDown();
        });

        $("#open-notifications-board").click(() => {
          $("#notifications-board-overlay").fadeIn("fast");
          $("#notifications-board").slideDown("slow");
        });

        $("#close-transfer-form").click(() => {
          $("#transfer-form").slideUp("fast");
          $("#overlay").fadeOut("slow");
        });

        $(".open-transfer-form").click(() => {
          $("#overlay").fadeIn("fast");
          $("#transfer-form").slideDown();
        });

        $("#close-board").click(() => {
          $("#board").slideUp("fast");
          $("#board-overlay").fadeOut("slow");
        });

        $("#close-notifications-board").click(() => {
          $("#notifications-board").slideUp("fast");
          $("#notifications-board-overlay").fadeOut("slow");
        });
      });
    </script>

