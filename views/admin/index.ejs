<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage | {/= sitename /}</title>
  </head>

  {/- include('../partials/includes') /}

  <body class="bg-black">
    <script>
      $(document).ready(() => {
        $("#close-board").click(() => {
          $("#board").slideUp("fast");
          $("#board-overlay").fadeOut("slow");
        });
      });
    </script>

    {/ if(Object.keys(flash.info).length) { /}

    <!-- Global Info Board  -->
    <!-- Overlay  -->
    <div
      id="board-overlay"
      class="fixed top-0 z-30 left-0 right-0 bottom-0 bg-gray-100 opacity-80"
    ></div>

    <!-- Board  -->
    <div
      id="board"
      class="max-w-2xl fixed mx-auto z-40 top-2 md:top-8 right-0 left-0 bg-white shadow-xl rounded"
    >
      <div class="relative">
        <i
          id="close-board"
          class="top-2 right-2 absolute text-2xl text-gray-400 cursor-pointer bi-x"
        ></i>

        <p class="text-purple-500 text-base md:text-xl text-left px-6 py-4">
          {/= flash.info /}
        </p>
      </div>
    </div>

    {/ } /} {/ if (viewOptions.includes('home')){ /}

    <div
      style="font-family: raleway"
      class="max-w-4xl flex flex-col justify-center items-center space-y-10 md:space-y-16 text-white mx-auto mt-32"
    >
      <p class="font-bold text-center text-2xl">Manage {/= sitename /}</p>

      <a
        class="bg-gray-700 text-left md:text-center text-lg md:text-xl px-8 py-1 hover:bg-purple-400"
        href="/manage/add-client"
      >
        <i class="bi-person-square"></i> &nbsp; Create new client
      </a>

      <a
        class="bg-gray-700 text-left md:text-center text-lg md:text-xl px-8 py-1 hover:bg-purple-400"
        href="/manage/home?view=customers"
      >
        <i class="bi-list"></i><i class="bi-person-circle"></i> &nbsp;View
        Clients
      </a>

      <a
        class="bg-gray-700 text-left md:text-center text-lg md:text-xl px-8 py-1 hover:bg-purple-400"
        href="/manage/home?view=credits"
      >
        <i class="bi-list"></i><i class="bi-cash"></i> &nbsp;View/Add Credits
      </a>

      <a
        class="bg-gray-700 text-left md:text-center text-lg md:text-xl px-8 py-1 hover:bg-purple-400"
        href="/manage/home?view=debits"
      >
        <i class="bi-list"></i><i class="bi-arrow-90deg-down"></i> &nbsp;Manage
        Debits
      </a>
    </div>

    {/ } /}

    <!-- Clients Sections -->

    {/ if (viewOptions.includes('clients')){ /} {/- include('__clients') /} {/ }
    /}

    <!-- Credits Sections -->

    {/ if (viewOptions.includes('credits')){ /} {/- include('__credits') /} {/ }
    /}

    <!-- Debits Sections -->

    {/ if (viewOptions.includes('debits')){ /} {/- include('__debits') /} {/ }
    /}
  </body>
</html>
