<!--Notifications  -->
<!-- Overlay  -->
<div id='notifications-board-overlay'
     class="fixed hidden top-0 z-20 left-0 right-0 bottom-0 bg-white opacity-75">

</div>

<div id='notifications-board'
     style="height:150vh;padding-bottom: 550px;"
     class="max-w-xl mx-auto hidden rounded mt-10 md:mt-16 z-30 fixed top-0 left-0 right-0 bg-gray-50  shadow-2xl p-2 min-h-screen overflow-y-scroll ">

    <p class="text-base text-gray-600 md:text-xl font-bold text-center p-4"
       style="font-family: work sans;"> Notifications </p>

    <a>

        <i id='close-notifications-board'
           class="bi-x rounded-full shadow-2xl text-xl absolute hover:bg-gray-300 bg-gray-200 px-2 py-1  top-4 right-4 text-gray-700 hover:scale-105 transform cursor-pointer"></i>

    </a>

    {/ notifications.map((n)=>{ /}
    <div style="font-family: raleway;"
         class="bg-blue-400 text-white p-4 mb-2">

        <p class="text-left text-base md:text-lg "> {/= n.timestamp.toLocaleString() /} </p>
        <p class="text-left text-base md:text-lg"> {/= n.description /} </p>

        <div class="mt-2">
        <a href='/app/notifications/mark-as-read/{/= n._id /}'> <button
                    class="bg-blue-500 hover:bg-blue-600 rounded px-4 py-2 tex-center "> Mark as
                read </button> </a>
        </div>

    </div>
    {/ }) /}


</div>